<%= form_for(@book) do |f| %>
  <div class="field">
	<%= f.label :title %><br />
	<%= f.text_field :title %>
  </div>
  <div class="field">
	<%= f.label :author %><br />
	<%= f.text_field :author %>
  </div>
  <div class="field">
	<%= f.label :content %><br />
	<%= f.text_area :content %>
  </div>
  <div class="actions">
	<%= f.submit %>
  </div>
<% end %>